const billValue = 430
let tip
(50 >= billValue) || (billValue >= 300) ? tip = billValue * 0.2 : tip = billValue * 0.15
{
    console.log(tip)
    console.log(`the bill was  ${billValue}  ,the tip was  ${tip} ,and the total value is  ${billValue + tip}`)
}


